<script>
  $(document).ready(function() {
    var itemsPerPage = 5; // Number of items to display per page

    // Show the items for the given page
    function showItems(page) {
      var startIndex = (page - 1) * itemsPerPage;
      var endIndex = startIndex + itemsPerPage;
      $(".online_training .card").hide().slice(startIndex, endIndex).show();
    }

    // Generate pagination links
    function generatePagination() {
      var totalItems = $(".online_training .card").length; // Total number of items
      var totalPages = Math.ceil(totalItems / itemsPerPage); // Calculate total number of pages
      var pagination = $("#pagination");
      pagination.empty();

      // Previous page link
      if (currentPage > 1) {
        pagination.append('<li class="page-item"><a class="page-link prev-link" href="#"><i class="fa-regular fa-chevrons-left"></i></a></li>');
      }

      // Page links
      for (var i = 1; i <= totalPages; i++) {
        var activeClass = (i === currentPage) ? "active" : "";
        pagination.append('<li class="page-item ' + activeClass + '"><a class="page-link" href="#">' + i + '</a></li>');
      }

      // Next page link
      if (currentPage < totalPages) {
        pagination.append('<li class="page-item"><a class="page-link next-link" href="#"><i class="fa-regular fa-chevrons-right"></i></a></li>');
      }
    }

    // Handle page click event
    $("#pagination").on("click", ".page-link", function(e) {
      e.preventDefault();
      var page = parseInt($(this).text());
      showItems(page);
      currentPage = page;
      generatePagination();
    });

    // Handle previous and next link events
    $("#pagination").on("click", ".prev-link", function(e) {
      e.preventDefault();
      if (currentPage > 1) {
        currentPage -= 1;
      }
      showItems(currentPage);
      generatePagination();
    });

    $("#pagination").on("click", ".next-link", function(e) {
      e.preventDefault();
      var totalPages = Math.ceil($(".online_training .card").length / itemsPerPage);
      if (currentPage < totalPages) {
        currentPage += 1;
      }
      showItems(currentPage);
      generatePagination();
    });

    // Initial page setup
    var currentPage = 1;
    showItems(currentPage);
    generatePagination();
  });
</script>
