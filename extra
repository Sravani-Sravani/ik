import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.format.DateTimeFormatterBuilder;
import java.time.format.TextStyle;
import java.util.Locale;

public class DateConversion {
    public static void main(String[] args) {
        String dateStr = "23rd Sep'23";

        DateTimeFormatter inputFormatter = new DateTimeFormatterBuilder()
                .appendPattern("d['st']['nd']['rd']['th'] MMM''yy")
                .parseDefaulting(ChronoField.HOUR_OF_DAY, 0)
                .parseDefaulting(ChronoField.MINUTE_OF_HOUR, 0)
                .parseDefaulting(ChronoField.SECOND_OF_MINUTE, 0)
                .toFormatter(Locale.ENGLISH);

        DateTimeFormatter outputFormatter = new DateTimeFormatterBuilder()
                .appendPattern("d")
                .appendText(ChronoField.DAY_OF_MONTH, TextStyle.SHORT_STANDALONE)
                .appendPattern(" MMMM yyyy")
                .toFormatter(Locale.ENGLISH);

        LocalDate date = LocalDate.parse(dateStr, inputFormatter);
        String formattedDate = date.format(outputFormatter);
        System.out.println(formattedDate);  // Output: 23rd September 2023
    }
}
