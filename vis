<footer>
    <!-- Your other footer content here -->
    
    <div class="visitor-count">
        Total Visitors: <span id="total-visitor-count">Loading...</span>
    </div>
</footer>

<script>
    // Function to set a cookie
    function setCookie(name, value, days) {
        const expires = new Date();
        expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
        document.cookie = name + '=' + value + ';expires=' + expires.toUTCString();
    }
    
    // Function to get a cookie's value
    function getCookie(name) {
        const cookies = document.cookie.split('; ');
        for (const cookie of cookies) {
            const [cookieName, cookieValue] = cookie.split('=');
            if (cookieName === name) {
                return cookieValue;
            }
        }
        return null;
    }
    
    // Get and update visitor count
    const visitorCountCookieName = 'visitorCount';
    const currentVisitorCount = parseInt(getCookie(visitorCountCookieName) || '0');
    const updatedVisitorCount = currentVisitorCount + 1;
    
    setCookie(visitorCountCookieName, updatedVisitorCount.toString(), 365); // Cookie lasts for a year
    
    document.getElementById('total-visitor-count').textContent = updatedVisitorCount;
</script>
