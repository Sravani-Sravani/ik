 <script>
        // Get the value of the 'refresh' query parameter from the URL
        const urlParams = new URLSearchParams(window.location.search);
        const shouldRefresh = urlParams.get('refresh');

        // Reload the current page if the 'refresh' query parameter is true
        if (shouldRefresh === 'true') {
            setTimeout(function() {
                location.reload();
            }, 2000); // 2 seconds delay, adjust as needed
        }
    </script>
