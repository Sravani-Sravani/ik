<div id="member-fields">
    <div class="lfr-form-row lfr-form-row-inline">
        <div class="form-group">
            <aui:input fieldParam="firstName0" id="firstName0" name="firstName0" label="YouTube Link" />
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default lfr-form-row-delete">Delete</button>
        </div>
    </div>
</div>

<aui:script use="liferay-auto-fields">
    AUI().use('liferay-auto-fields', function(A) {
        new Liferay.AutoFields({
            contentBox: '#member-fields',
            fieldIndexes: '<portlet:namespace />rowIndexes',
            on: {
                'liferay-auto-fields:rowAdded': function(event) {
                    var newRow = event.newRow;
                    var deleteButton = newRow.one('.lfr-form-row-delete');

                    deleteButton.on('click', function() {
                        if (newRow.siblings('.lfr-form-row').size() > 0) {
                            newRow.remove();
                        }
                    });
                }
            }
        }).render();
    });
</aui:script>
