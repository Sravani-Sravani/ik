<!DOCTYPE html>
<html>
<head>
    <title>Email Template</title>
</head>
<body>
    <h1>Hello {name},</h1>
    <p>This is a sample email with dynamic data from Liferay Portlet.</p>
    <p>Event Name: {event_name}</p>
    <p>Event Location: {event_location}</p>
    <img src="cid:logo_image" alt="Logo Image">
</body>
</html>

import java.io.IOException;
import java.nio.charset.StandardCharsets;
import java.util.HashMap;
import java.util.Map;
import org.apache.commons.io.IOUtils;

// ...

// Load the HTML template from the file
String templatePath = "/path/to/email_template.html"; // Adjust the path as per your project structure
String htmlTemplate = null;
try (InputStream inputStream = getClass().getResourceAsStream(templatePath)) {
    htmlTemplate = IOUtils.toString(inputStream, StandardCharsets.UTF_8);
} catch (IOException e) {
    // Handle IOException
}

// Replace placeholders with actual data (assuming you have the required data in variables)
String name = "John Doe";
String eventName = "Sample Event";
String eventLocation = "Sample Location";

Map<String, String> replacements = new HashMap<>();
replacements.put("{name}", name);
replacements.put("{event_name}", eventName);
replacements.put("{event_location}", eventLocation);

for (Map.Entry<String, String> entry : replacements.entrySet()) {
    htmlTemplate = htmlTemplate.replace(entry.getKey(), entry.getValue());
}
